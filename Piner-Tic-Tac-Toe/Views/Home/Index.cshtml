@{
    ViewData["Title"] = "Tic_Tac_Toe";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="~/css/tic-tac-toe.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <title>Tic-Tac-Toe</title>
</head>
<body>
    <div class="box text-center">
        <h1 class="my-4" style="color: floralwhite">Tic-Tac-Toe</h1>

        <div class="mode-selection">
            <button class="btn btn-primary" onclick="setMode('multiplayer')">Multiplayer</button>
            <button class="btn btn-secondary" onclick="setMode('ai')">Play vs AI</button>
        </div>

        <div id="scoreboard" class="my-3">
            <p>Player X Wins: <span id="x-wins">0</span></p>
            <p>Player O Wins: <span id="o-wins">0</span></p>
            <p>Draws: <span id="draws">0</span></p>
        </div>

        <div id="board" class="board mx-auto"></div>

        <p id="status" class="mt-3"></p>

        <button id="resetBtn" class="btn btn-danger mt-3" style="margin-bottom: 25px;" onclick="resetGame()">Restart</button>
    </div>

    <script src="~/js/gameHub.js" defer></script> <!-- SignalR first -->
    <script src="~/js/tic-tac-toe.js" defer></script> <!-- Game logic after -->
</body>
</html>